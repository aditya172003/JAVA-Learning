import java.util.*;

class Question_9
{
	/*
		9.Create an array of 6 integers.Print addition of numbers at even index only.
	*/
	public static void main(String [] args)
	{
		Scanner sc = new Scanner(System.in);
		int []arr  = new int[6];
		for(int  i =0;i<arr.length;i++)
		{
			System.out.println("Enter the number ");
			
			arr[i]=sc.nextInt();	
			
		}
		
		int ans =0;
		for(int i=0;i<arr.length;i+=2)
		{
			ans=ans+arr[i];
		}
		
		System.out.println("Sum of the even indexed numbers in the array = " + ans);
		

		
	}


}
