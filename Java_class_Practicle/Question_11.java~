import java.util.*;

class Question_11
{

	public static void main(String []args)
	{
	
		/*
			Q 11 ] Keep scanning a number from user until user enters -1.Print addition of positive and 
			       negative numbers separate.

		*/
		
		
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Keep entering the numbers , To stop enter -1 ");
		int pans = 0;
		int nans = 0;
		while(true)
		{
			int n;
			System.out.println(":");
			n = sc.nextInt();
			
			if(n==-1)
			{
				break;
			}
			
			if(n>0)
			{
				pans += n; 
			}
			else
			{
			
				nans += n;
			}

		
		}
	
		System.out.println("Sum of Positive numebrs : = " + pans);
		System.out.println("Sum of negative numebrs : = " + nans);
		
	
	
		
	
	}



}
